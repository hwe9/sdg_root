# SDG Project Environment Variables
# Copy this file to .env and fill in the values

# Database
DATABASE_URL=  # Primary database connection URL
DB_HOST=database_service  # Database host
DB_PORT=5432  # Database port
POSTGRES_USER=postgres  # PostgreSQL username
POSTGRES_PASSWORD=  # REQUIRED: PostgreSQL password
POSTGRES_DB=sdg_pipeline  # PostgreSQL database name

# Redis
REDIS_URL=redis://redis:6379  # Redis connection URL
REDIS_PASSWORD=  # Redis password

# Weaviate
WEAVIATE_URL=http://weaviate_service:8080  # Weaviate vector database URL
WEAVIATE_API_KEY=  # Weaviate API key
WEAVIATE_TRANSFORMER_URL=http://weaviate_transformer_service:8080  # Weaviate transformer service URL

# Security
SECRET_KEY=  # REQUIRED: Secret key for JWT and encryption
SECRET_KEY_ENCRYPTED=  # Encrypted secret key
ENCRYPTION_SALT=default_salt  # Salt for encryption

# Service Configuration
ENVIRONMENT=development  # Environment (development, staging, production)
LOG_LEVEL=INFO  # Logging level
DEBUG=false  # Debug mode
ALLOWED_ORIGINS=*  # Allowed CORS origins

# Service URLs
API_SERVICE_URL=http://api_service:8000  # API service URL
AUTH_SERVICE_URL=http://auth_service:8005  # Auth service URL
DATA_PROCESSING_URL=http://data_processing_service:8001  # Data processing service URL
DATA_RETRIEVAL_URL=http://data_retrieval_service:8002  # Data retrieval service URL
VECTORIZATION_SERVICE_URL=http://vectorization_service:8003  # Vectorization service URL
CONTENT_EXTRACTION_URL=http://content_extraction_service:8004  # Content extraction service URL

# Dependency Management
DEPENDENCY_MANAGER_ENABLED=true  # Enable dependency manager
HEALTH_CHECK_INTERVAL=60  # Health check interval in seconds
MAX_STARTUP_TIME=300  # Maximum startup time in seconds

# Directories
CONFIG_DIR=/data/config  # Configuration directory path
SECRET_STORE_DIR=/data/secrets  # Secret store directory path
DATA_ROOT=/data  # Data root directory
RAW_DATA_DIR=/data/raw_data  # Raw data directory
PROCESSED_DATA_DIR=/data/processed_data  # Processed data directory
IMAGES_DIR=/data/images  # Images directory

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@sdg.local  # PgAdmin default email
PGADMIN_DEFAULT_PASSWORD=  # REQUIRED: PgAdmin default password
